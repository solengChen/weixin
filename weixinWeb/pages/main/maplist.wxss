/* mainpage.wxss */
/*top tab*/
.hazardList{
  margin-top: 20rpx;
  padding: 0 16 rpx;
}
.container{ 
 height: 100%; 
 padding: 20rpx; 
} 
.scrollView{
  height: 100%;
  padding: 0rpx 10rpx 10rpx 10rpx;
}
.footer{
  width: 100%;
  display: flex;
  justify-content: center;
}
.refresh-icon{
  width: 30rpx;
  height: 30rpx;
}
.refresh-text{
  font-size: 0.7em;
  white-space: pre;
}
.hazardList-item{
  padding: 10rpx 6rpx 10rpx;
  border: 1px solid #ddd;
  margin: 10rpx 5rpx 10rpx 5rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: block;
}
.hazardList-item-top{
  padding: 10rpx;
  border-bottom: 1px solid #ddd;
  justify-content: space-between;
  display: flex;
}
.hazardList-item-middel{
  margin-top: 10px;
  padding: 0rpx 5rpx 0rpx 5rpx;
  font-size: 28rpx;
  justify-content: space-between  ;
  display: flex;
}
.hazard-item-name{
  overflow: hidden;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
}
.hazard-item-desc{
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  color: #999;
  line-height: 1.3;
  margin-top: 10px;
  height: 46px;
  font-size:26rpx;
}
.hazard-time{
  font-size: 27rpx;
}
.hazard-grade{
  font-size: 27rpx;
}
.hazard-tip{
  font-size: 27rpx;
}
.hazard-grade-before{
  color: #668f99;
}
.hazard-grade1 {
  color: #ED1942;
}
.hazard-grade2{
  color: #FF7500;
}
.hazard-grade3 {
  color: #FFD400;
}
.hazard-grade4 {
  color: #33A3DC;
}
.hazard-grade0 {
  color: #32CD32;
}
.hazard-state0{
  text-align: right;
}
.hazard-state1{
  text-align: right;
}
navigator{
  box-sizing: border-box;
}

